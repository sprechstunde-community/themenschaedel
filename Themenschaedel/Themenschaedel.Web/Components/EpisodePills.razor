@using Themenschaedel.Web.Services.Interfaces
@using Themenschaedel.Shared.Models
@using System.ComponentModel.DataAnnotations

@switch (ClaimStatus)
{
    case EpisodeClaimStatus.claimed:
        @if (StatusStyle == Style.Transparent)
        {
            <div class="transparent-tag blue">
                Claimed
            </div>
        }
        else
        {
            <div class="tag blue">
                Claimed
            </div>
        }
        break;
    case EpisodeClaimStatus.not_claimed:
        @if (StatusStyle == Style.Transparent)
        {
            <div class="transparent-tag purple">
                Free to Claim
            </div>
        }
        else
        {
            <div class="tag purple">
                Free to Claim
            </div>
        }
        break;
    case EpisodeClaimStatus.done:
        @if (StatusStyle == Style.Transparent)
        {
            <div class="transparent-tag red">
                Done
            </div>
        }
        else
        {
            <div class="tag red">
                Done
            </div>
        }

        break;

    case EpisodeClaimStatus.unverified:
        @if (StatusStyle == Style.Transparent)
        {
            <div class="transparent-tag lightblue">
                Unverified
            </div>
        }
        else
        {
            <div class="tag lightblue">
                Unverified
            </div>
        }

        break;
}

@code {

    public enum Style
    {
        Default,
        Transparent
    }

    [Parameter]
    [Required]
    public EpisodeClaimStatus ClaimStatus { get; set; }

    [Parameter]
    public Style StatusStyle { get; set; } = Style.Default;

}