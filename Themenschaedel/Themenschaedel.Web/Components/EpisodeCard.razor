@using Themenschaedel.Shared.Props
@using Humanizer
@inject NavigationManager NavigationManager

<style>
    .video {
        position: relative;
        background-color: var(--video-bg);
        border-radius: 20px;
        overflow: hidden;
        transition: 0.4s;
    }

    .video-wrapper {
        position: relative;
    }

    .video-name {
        color: #fff;
        font-size: 16px;
        line-height: 1.4em;
        padding: 12px 20px 0;
        overflow: hidden;
        background-color: var(--video-bg);
        z-index: 9;
        position: relative;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .video-view {
        font-size: 12px;
        padding: 12px 20px 20px;
        background-color: var(--video-bg);
        position: relative;
    }

    .video-by {
        transition: 0.3s;
        padding: 20px 20px 0px;
        display: inline-flex;
        position: relative;
    }

        .video-by:before {
            content: "";
            background-color: #22b07d;
            width: 6px;
            height: 6px;
            border-radius: 50%;
            position: absolute;
            top: 26px;
            right: 5px;
        }

        .video-by.offline:before {
            background-color: #ff7551;
        }

    .video-time {
        position: absolute;
        background: rgba(21, 13, 13, 0.44);
        color: #fff;
        padding: 3px 8px;
        font-size: 12px;
        border-radius: 6px;
        top: 10px;
        z-index: 1;
        right: 8px;
    }
    
    .video-claim-status {
        position: absolute;
        font-size: 12px;
        top: 10px;
        z-index: 1;
        left: 8px;
    }

    .video:hover video {
        transform: scale(1.6);
        transform-origin: center;
    }

    .video:hover .video-time {
        display: none;
    }
        
    .video:hover .video-claim-status {
        display: none;
    }

    .video:hover .video-author {
        bottom: -65px;
        transform: scale(0.6);
        right: -3px;
        z-index: 10;
    }

    .video:hover .video-by {
        opacity: 0;
    }

    .video-author {
        position: absolute;
        right: 10px;
        transition: 0.4s;
        bottom: -25px;
    }

        .video-author svg {
            background-color: #0aa0f7;
            color: #fff;
            border-color: var(--video-bg);
        }
</style>

<a href="episode/@item.id">
    <div class="video anim" style="@item.AnimationDelayCSS" @onclick="@(e => EpisodeClick())">
        <div class="video-time">@(item.duration/60)m</div>
        <div class="video-claim-status"><EpisodePills ClaimStatus=@item.ClaimStatus StatusStyle="EpisodePills.Style.Transparent"/></div>
        <div class="video-wrapper" @onclick="@(e => EpisodeClick())">
            <img class="thumbnail" src="@item.image" />
            <div class="author-img__wrapper video-author">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-check feather feather-check" viewBox="0 0 24 24" stroke-width="4" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                   <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                   <path d="M5 12l5 5l10 -10"></path>
                </svg>
                <img class="author-img" src="">
            </div>
        </div>
        <div class="video-by">Andy William</div>
        <div class="video-name" @onclick="@(e => EpisodeClick())"><a href="episode/@item.id">@((MarkupString)item.title)</a></div>
        <div class="video-view">@item.published_at.Humanize().ToString()</div>
    </div>
</a>


@code {

    [Parameter]
    public Episode item { get; set; }

    protected const string cssThumbnailHover = "display: none;";

    protected void EpisodeClick()
    {
        NavigationManager.NavigateTo($"episode/{item.id}");
    }
}
