@using Themenschaedel.Shared.Models
@using Humanizer
@using System.ComponentModel.DataAnnotations
@inject NavigationManager NavigationManager

<style>
    .video {
        position: relative;
        background-color: var(--video-bg);
        border-radius: 20px;
        overflow: hidden;
        transition: 0.4s;
    }

    .video-wrapper {
        position: relative;
    }

    .video-name {
        color: #fff;
        font-size: 16px;
        line-height: 1.4em;
        padding: 12px 20px 0;
        overflow: hidden;
        background-color: var(--video-bg);
        z-index: 9;
        position: relative;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .video-view {
        font-size: 12px;
        padding: 12px 20px 20px;
        background-color: var(--video-bg);
        position: relative;
    }

    .video-by {
        transition: 0.3s;
        padding: 20px 20px 0px;
        display: inline-flex;
        position: relative;
    }

        .video-by:before {
            content: "";
            background-color: #22b07d;
            width: 6px;
            height: 6px;
            border-radius: 50%;
            position: absolute;
            top: 26px;
            right: 5px;
        }

        .video-by.offline:before {
            background-color: #ff7551;
        }

    .video-time {
        position: absolute;
        background: rgba(21, 13, 13, 0.44);
        color: #fff;
        padding: 3px 8px;
        font-size: 12px;
        border-radius: 6px;
        top: 10px;
        z-index: 1;
        right: 8px;
    }
    
    .video-claim-status {
        position: absolute;
        font-size: 12px;
        top: 10px;
        z-index: 1;
        left: 8px;
    }

    .video:hover video {
        transform: scale(1.6);
        transform-origin: center;
    }

    .video:hover .video-time {
        display: none;
    }
        
    .video:hover .video-claim-status {
        display: none;
    }

    .video:hover .video-author {
        bottom: -65px;
        transform: scale(0.6);
        right: -3px;
        z-index: 10;
    }

    .video:hover .video-by {
        opacity: 0;
    }

    .video-author {
        position: absolute;
        right: 10px;
        transition: 0.4s;
        bottom: -25px;
    }

        .video-author svg {
            background-color: #0aa0f7;
            color: #fff;
            border-color: var(--video-bg);
        }
</style>

<a>
    <div class="video anim" style="@item.AnimationDelayCSS">
        <div class="video-time" href="episode/@item.Id">@(item.Duration/60)m</div>
        <div class="video-claim-status"><EpisodePills ClaimStatus=@item.ClaimStatus StatusStyle="EpisodePills.Style.Transparent"/></div>
        <div class="video-wrapper" @onclick="@(e => EpisodeClick())">
            <img class="thumbnail" src="@item.Image" />
        </div>
        <div class="@unseenEpisode">@item.PublishedAt.Humanize().ToString()</div>
        <div class="video-name" @onclick="@(e => EpisodeClick())"><a href="episode/@item.Id">@((MarkupString)item.Title)</a></div>
        <div class="video-view"><i class="ti ti-arrow-narrow-up" @onclick="Test"></i>@item.Upvotes <i class="ti ti-arrow-narrow-down"></i>@item.Downvotes</div>
    </div>
</a>


@code {

    [Required]
    [Parameter]
    public EpisodeClient item { get; set; }

    [Parameter]
    public int LastSeenEpisodeNumber { get; set; }

    protected const string cssThumbnailHover = "display: none;";
    protected string unseenEpisode = "video-by old";

    protected void EpisodeClick()
    {
        NavigationManager.NavigateTo($"episode/{item.Id}");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            if (item.EpisodeNumber > LastSeenEpisodeNumber)
            {
                unseenEpisode = "video-by new";
                this.StateHasChanged();
            }
        }
    }

    protected void Test()
    {
        unseenEpisode = "video-by new";
    }

}
